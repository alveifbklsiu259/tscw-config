{
	"name": "tsc-with-config",
	"version": "0.0.0-semantically-released",
	"bin": {
		"tscw": "./dist/cli.js"
	},
	"scripts": {
		"clean": "rimraf dist/ .lint-cache/.tsbuildinfo",
		"build": "npm run clean && tsc -p tsconfig.build.json",
		"prepublishOnly": "npm run build",
		"test": "jest",
		"test:unit": "jest --testPathPattern=test/unit",
		"test:e2e": "jest --testPathPattern=test/e2e",
		"knip": "knip --config ./knip.config.mjs",
		"check-format": "prettier . --ignore-unknown --check --cache --cache-strategy metadata --cache-location .lint-cache/.prettiercache",
		"check-spelling": "cspell . --no-progress --show-context --cache --cache-strategy metadata --cache-location .lint-cache/.cspellcache",
		"lint-markdown": "markdownlint \"**/*.md\"",
		"lint": "eslint . --report-unused-disable-directives",
		"type-check": "node ./dist/cli.js --noEmit -p tsconfig.build.json",
		"prepare": "husky"
	},
	"files": [
		"dist"
	],
	"author": "alveifbklsiu259 <https://github.com/alveifbklsiu259>",
	"license": "MIT",
	"description": "A CLI tool that allows user to run tsc with files and tsconfig.json at the same time",
	"keywords": [
		"typescript",
		"tsc"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/alveifbklsiu259/tsc-with-config"
	},
	"peerDependencies": {
		"typescript": ">=2.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.4.1",
		"@commitlint/config-conventional": "^19.4.1",
		"@commitlint/format": "^19.3.0",
		"@eslint/eslintrc": "^3.1.0",
		"@eslint/js": "^9.9.1",
		"@jest/globals": "^29.7.0",
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"@types/eslint-plugin-markdown": "^2.0.2",
		"@types/eslint__eslintrc": "^2.1.2",
		"@types/eslint__js": "^8.42.3",
		"@types/node": "^22.2.0",
		"cspell": "^8.14.2",
		"eslint": "^9.9.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-jest": "^28.8.1",
		"eslint-plugin-json": "^4.0.1",
		"eslint-plugin-markdown": "^5.1.0",
		"expect": "^29.7.0",
		"globals": "^15.9.0",
		"husky": "^9.1.5",
		"jest": "^29.7.0",
		"knip": "^5.29.1",
		"lint-staged": "^15.2.9",
		"markdownlint-cli": "^0.41.0",
		"pidtree": "^0.6.0",
		"prettier": "^3.3.3",
		"rimraf": "^6.0.1",
		"ts-jest": "^29.2.5",
		"typescript": "^5.5.4",
		"typescript-eslint": "^8.3.0"
	}
}
