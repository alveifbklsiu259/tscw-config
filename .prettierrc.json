{
	"tabWidth": 4,
	"useTabs": true,
	"arrowParens": "avoid",
	"printWidth": 120,
	"plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-sh"],
	"importOrder": ["<THIRD_PARTY_MODULES>", "^[./]"],
	"importOrderSortSpecifiers": true,
	"importOrderCaseInsensitive": true,
	"overrides": [
		{
			"files": "*.{sh,md}",
			"options": {
				"useTabs": false,
				"tabWidth": 2
			}
		}
	]
}
